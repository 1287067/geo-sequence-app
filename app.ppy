import streamlit as st

def geometric_sequence(first_term: float, common_ratio: float, num_terms: int):
    """Generate a geometric sequence as a list."""
    return [first_term * (common_ratio ** i) for i in range(num_terms)]

# Streamlit app UI
st.set_page_config(page_title="Geometric Sequence Generator", page_icon="âœ–ï¸")

st.title("ğŸ“Š Geometric Sequence Generator")

# User inputs
first_term = st.number_input("Enter the first term (aâ‚):", value=1.0, step=1.0, format="%.2f")
common_ratio = st.number_input("Enter the common ratio (r):", value=2.0, step=0.1, format="%.2f")
num_terms = st.number_input("Enter the number of terms (n):", value=5, step=1, min_value=1)

# Generate and display sequence
if st.button("Generate Sequence"):
    sequence = geometric_sequence(first_term, common_ratio, num_terms)
    st.subheader("Resulting Geometric Sequence:")
    st.write(sequence)

    # Extra: Display formula
    st.latex(r"a_n = a_1 \cdot r^{\,n-1}")
    st.write(f"General term: aâ‚™ = {first_term} Ã— ({common_ratio})^(n-1)")
